<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="DeviceThumbnail">
    <item name="android:scaleType">fitCenter</item>
  </style>
  
  <style name="DeviceText">
    <item name="android:textSize">32sp</item>
    <item name="android:gravity">center_horizontal</item>
    <item name="android:layout_gravity">center_horizontal</item>
    <item name="android:textStyle">normal</item>
  </style>
  
  <style name="DeviceText.Title">
    <item name="android:textColor">@color/app_color</item>
    <item name="android:background">?android:attr/selectableItemBackground</item>
  </style>
  
  <style name="DeviceText.Info">
    <item name="android:textSize">16sp</item>
  </style>
  
  <style name="StarToggle">
    <item name="android:background">?android:selectableItemBackground</item>
    <item name="android:scaleType">fitXY</item>
  </style>
  
  <style name="AboutText" parent="android:TextAppearance.DeviceDefault.Small">
    <item name="android:gravity">center</item>
  </style>
  
  <style name="AboutText.Header">
    <item name="android:textStyle">bold</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:layout_marginTop">16dp</item>
  </style>
  
  <style name="AboutText.Clickable">
    <item name="android:textColor">@color/app_color</item>
    <item name="android:background">?android:attr/selectableItemBackground</item>
  </style>
</resources>